<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/com.centaline.corelib.widgets.RoundProgressBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.centaline.corelib.widgets.RoundProgressBar
        android:id="@+id/roundProgressBar"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginBottom="78dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="130dp"

        app:max="100"
        app:roundColor="#D1D1D1"
        app:roundProgressColor="#9A32CD"
        app:roundWidth="10dip"
        app:style="STROKE"
        app:textColor="#9A32CD"
        app:textIsDisplayable="true"
        app:textSize="18sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="70dp"
        android:text="开始"
        android:onClick="click"/>

</LinearLayout>